@model E_Ticaret.Models.Slider

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Slider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SliderId" />
            <div class="form-group">
                <label asp-for="SliderName" class="control-label"></label>
                <input asp-for="SliderName" class="form-control" />
                <span asp-validation-for="SliderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Header1" class="control-label"></label>
                <input asp-for="Header1" class="form-control" />
                <span asp-validation-for="Header1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Header2" class="control-label"></label>
                <input asp-for="Header2" class="form-control" />
                <span asp-validation-for="Header2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderContext" class="control-label"></label>
                <input asp-for="SliderContext" class="form-control" />
                <span asp-validation-for="SliderContext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderDescription" class="control-label"></label>
                <input asp-for="SliderDescription" class="form-control" />
                <span asp-validation-for="SliderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderImage" class="control-label"></label>
                <div class="d-flex align-items-center">
                    <img src="/Urunler/@Model.SliderImage" alt="Product Image" style="width: 100px; height: 100px; object-fit: cover; margin-right: 10px;" />
                    <input asp-for="ImageUpload" type="file" class="form-control" />
                </div>
                <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
		await Html.RenderPartialAsync("_ValidationScriptsPartial"); //Bu kısım formun doğru şekilde çalışması için gerekli olan scriptleri yükler.
    }
}
